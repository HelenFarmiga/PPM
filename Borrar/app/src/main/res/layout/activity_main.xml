<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:fillViewport="false">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:divider="?android:dividerHorizontal"
    android:weightSum="1"
    android:background="@drawable/degradado1"
    >
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="130dp"
            android:layout_height="39dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:text="   ¡¡Entradas online!!!"
            android:id="@+id/textView"
            android:textColor="@color/titulo"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.14" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="96dp"
            android:id="@+id/imageView"
            android:background="@drawable/logo2"
            android:layout_weight="0.22" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spin"
            android:layout_height="wrap_content"
            android:layout_width="242dp"
            android:layout_marginRight="20dp" />

    </LinearLayout>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp"
        android:id="@+id/grupoRadio">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="50px"
            android:typeface="sans"
            android:gravity="center"
            android:text="Por e-mail"
            android:id="@+id/rb2"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:typeface="sans"
            android:gravity="center"
            android:text="En Taquilla"
            android:id="@+id/rb1"
            android:checked="true"/>
    </RadioGroup>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <CheckBox
            android:layout_gravity="center_horizontal"
            android:layout_width="88dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:text="Saladas"
            android:typeface="sans"
            android:id="@+id/cbl"
            android:checked="true"
            />

        <CheckBox
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Dulces"
            android:typeface="sans"
            android:id="@+id/cbm"
            />
        <CheckBox
            android:layout_width="93dp"
            android:textSize="12dp"
            android:layout_height="wrap_content"
            android:text="Nachos"
            android:typeface="sans"
            android:id="@+id/cbx"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/grupoRadio2">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:gravity="center"
            android:text="Primera Sesion"
            android:id="@+id/rbb1"
            android:layout_gravity="center_horizontal" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:gravity="center"
            android:text="Segunda Sesion"
            android:id="@+id/rbb2"
            android:checked="true"
            android:layout_gravity="center_horizontal" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans"
            android:gravity="center"
            android:text="Tercera Sesion"
            android:layout_marginBottom="5dp"
            android:id="@+id/rbb3"
            android:layout_gravity="center_horizontal" />
    </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:hint="Entradas "
        android:inputType="numberDecimal"
        android:id="@+id/cant"
    />

    <Button
        android:layout_width="165dp"
        android:layout_height="wrap_content"
        android:text="Calcular "
        android:typeface="sans"
        android:id="@+id/btCal"
        android:background="@color/colorA"
        android:layout_gravity="right" />
    </LinearLayout>
</LinearLayout>
</ScrollView>